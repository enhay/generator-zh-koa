{
  "apps": [
    {
      "name": "${PRJ_NAME}",
      "script": "app.js",
      "cwd": "${PRJ_ROOT}/nodeapp/",
      "exec_mode": "${PM2_MODE}",
      "${PASS_ONLINE}instances": 6,
      "${PASS_DEV}watch": "${PRJ_ROOT}/nodeapp/",
      "max_memory_restart": "1G",
      "autorestart": true,
      "error_file": "${PM2_LOG_DIR}/error.log",
      "out_file": "${PM2_LOG_DIR}/access.log",
      "merge_logs": true,
      "node_args": [],
      "args": [],
      "env": {
        "NODE_ENV": "${NODE_ENV}",
        "PORT": "${PORT}"
      }
    }
  ]
}